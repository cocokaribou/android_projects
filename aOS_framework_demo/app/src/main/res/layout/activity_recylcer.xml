<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear LayoutManager"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_linear" />

    <EditText
        android:id="@+id/edit_spacing"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="간격"
        android:singleLine="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_horizontal" />

    <EditText
        android:id="@+id/edit_edge"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:hint="양끝 간격"
        android:singleLine="true"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toStartOf="@id/switch_edge"
        app:layout_constraintStart_toEndOf="@id/edit_spacing"
        app:layout_constraintTop_toTopOf="@id/edit_spacing"
        app:layout_constraintBottom_toBottomOf="@id/edit_spacing"/>

    <Switch
        android:id="@+id/switch_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_spacing"
        app:layout_constraintStart_toEndOf="@id/edit_edge"
        app:layout_constraintTop_toTopOf="@id/edit_spacing" />


    <Button
        android:id="@+id/btn_addDeco"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="GO"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/edit_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_spacing" />

    <TextView
        android:id="@+id/txt_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grid LayoutManager"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_spacing"
        app:layout_constraintBottom_toTopOf="@id/recycler_grid"/>
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_grid"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:scrollbars="vertical"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_grid" />

    <EditText
        android:id="@+id/edit_grid_spacing"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="간격"
        android:singleLine="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_grid" />

    <Switch
        android:id="@+id/switch_grid_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/edit_grid_spacing"
        app:layout_constraintStart_toEndOf="@id/edit_spacing"
        app:layout_constraintTop_toTopOf="@id/edit_grid_spacing" />

    <Button
        android:id="@+id/btn_addDeco2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="GO"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/edit_grid_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_grid_spacing" />
    <TextView
        android:id="@+id/txt_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="collapse"
        android:textSize="27sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_addDeco2"/>
    <TextView
        android:id="@+id/txt_expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="열고 닫기"
        android:textSize="50sp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/txt_expand"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#eeeeee"/>

</androidx.constraintlayout.widget.ConstraintLayout>