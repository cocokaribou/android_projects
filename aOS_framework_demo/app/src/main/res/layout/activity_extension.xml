<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ImageView Extensions"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_loadImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loadImage"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/txt_imgView"
        app:layout_constraintTop_toBottomOf="@id/txt_imgView" />

    <Button
        android:id="@+id/btn_withScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="withScale"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btn_loadImg"
        app:layout_constraintTop_toBottomOf="@id/txt_imgView" />

    <Button
        android:id="@+id/btn_preload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="preload"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_loadImg" />

    <Button
        android:id="@+id/btn_inCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="inCircle"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btn_preload"
        app:layout_constraintTop_toTopOf="@id/btn_preload" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:background="@drawable/imgview_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_preload" />

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Layout Extensions"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgView" />
    <EditText
        android:id="@+id/edit_linearSum"
        android:layout_width="100dp"
        android:layout_height="27sp"
        app:layout_constraintTop_toBottomOf="@id/txt_view"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/edit_linearSum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="1"
        android:background="@color/blue">
        <View
            android:id="@+id/view_inner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>