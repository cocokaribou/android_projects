<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IntroTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/intro_bg</item>
        <!--<item name="android:windowBackground">@drawable/intro_nomal_logo</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="push_popup_theme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="title_style">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">19.33dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sett_left_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16.66dp</item>
    </style>
    <style name="sett_left_msg">
        <item name="android:textColor">@color/color_disable</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">@dimen/sett_sub_height_margin</item>
    </style>
    <style name="dialog_msg">
        <item name="android:textColor">@color/color_popup_msg</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="dialog_cancel">
        <item name="android:textColor">@color/color_popup_btn_cancel</item>
        <item name="android:textSize">16.66dp</item>
    </style>
    <style name="dialog_confirm">
        <item name="android:textColor">@color/color_popup_bg</item>
        <item name="android:textSize">16.66dp</item>
    </style>
    
    <style name="sett_item_layout">
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingTop">@dimen/sett_height_margin</item>
        <item name="android:paddingBottom">@dimen/sett_height_margin</item>
        <item name="android:paddingLeft">@dimen/sett_left_margin</item>
        <item name="android:paddingRight">@dimen/sett_right_margin</item>
    </style>
    <style name="bottom_tab_style">
        <item name="android:textSize">10.66dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="bottom_icon">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">15.67dp</item>

    </style>

    <style name="bottom_badge_icon">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">12.5dp</item>
        <item name="android:layout_marginRight">3.5dp</item>
    </style>


    <style name="btn_more_style">
        <item name="android:layout_marginTop">13.33dp</item>
        <item name="android:drawablePadding">13.33dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">14.66dp</item>
    </style>
    <style name="alarm_list_sub_title">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="alarm_list_text">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15.33dp</item>
    </style>

    <style name="Theme.AppCompat.Translucent_search">
        <item name="android:windowBackground">@color/search_ctg</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="home_section_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20.16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2f2f2f</item>
    </style>

    <style name="home_section_subtitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_marginLeft">9.6dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#8e8e8e</item>
    </style>

    <style name="home_section_more">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">3.84dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>
