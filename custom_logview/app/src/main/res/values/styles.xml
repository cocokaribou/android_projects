<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LogBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/LogBottomSheetStyle</item>
    </style>

    <style name="LogBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="log_button">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#f0f0f0</item>
    </style>

    <style name="log_input">
        <item name="android:inputType">text</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/input</item>
    </style>

    <style name="log_list">
        <item name="android:background">#b3000000</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/bar</item>
        <item name="android:scrollbarTrackVertical">@color/black</item>
        <item name="android:scrollbars">vertical</item>
    </style>
</resources>