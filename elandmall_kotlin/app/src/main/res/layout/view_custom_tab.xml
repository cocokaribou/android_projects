<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gnb_height"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/gnb_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#808080"
            android:textSize="9.6dp"
            app:layout_constraintEnd_toEndOf="@id/gnb_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/tools_gnb_subtitle" />

        <TextView
            android:id="@+id/gnb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/selector_gnb_title"
            android:textSize="15.36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/tools_gnb_subtitle" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1.92dp"
            android:src="@drawable/selector_category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gnb_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/new_ic"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:background="#ff0000"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="N"
            android:textColor="@color/white"
            android:textSize="9dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/gnb_title"
            app:layout_constraintTop_toTopOf="@id/gnb_title" />

        <ImageView
            android:id="@+id/new_ic_mask"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:tint="#f4f5f7"
            android:visibility="gone"
            android:src="@drawable/ic_mask_circle"
            app:layout_constraintBottom_toBottomOf="@id/new_ic"
            app:layout_constraintEnd_toEndOf="@id/new_ic"
            app:layout_constraintStart_toStartOf="@id/new_ic"
            app:layout_constraintTop_toTopOf="@id/new_ic" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>