<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="17.5dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="155dp"
            android:layout_height="155dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="26dp"
        android:lines="2"
        android:maxLines="2"
        android:textColor="#414141"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_holder"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/tools_text_goods_nm" />

    <TextView
        android:id="@+id/price_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/quantity"
        app:layout_constraintEnd_toStartOf="@id/price_after_won"
        app:layout_constraintTop_toBottomOf="@id/goods_name"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/tools_text_price_after" />

    <TextView
        android:id="@+id/price_after_won"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="@string/won"
        android:textSize="16dp"
        app:layout_constraintBaseline_toBaselineOf="@id/price_after"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/price_after" />


    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:textColor="#8e8e8e"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/img_holder"
        app:layout_constraintStart_toStartOf="@id/goods_name"
        tools:text="@string/tools_text_quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>