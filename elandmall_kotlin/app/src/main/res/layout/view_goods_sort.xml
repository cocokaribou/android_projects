<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="35.5dp"
        android:spinnerMode="dropdown"
        android:layout_marginStart="11.52dp"
        android:background="@drawable/background_stroke_grey_1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_drop_down"
        app:layout_constraintTop_toTopOf="@id/list"
        app:layout_constraintBottom_toBottomOf="@id/list"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="@id/list"/>

    <ImageView
        android:id="@+id/holder"
        android:layout_width="35.5dp"
        android:layout_height="0dp"
        android:layout_marginEnd="11.52dp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/background_stroke_grey_1dp"
        android:src="@drawable/ic_btn_holder_grid"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/list"
        app:layout_constraintBottom_toBottomOf="@id/list"/>

    <View
        style="@style/divider_line"
        android:layout_marginTop="9.56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list"/>
</androidx.constraintlayout.widget.ConstraintLayout>