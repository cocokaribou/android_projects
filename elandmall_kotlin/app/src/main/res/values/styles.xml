<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home_section_title_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57.6dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="home_section_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20.16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">14.4dp</item>
        <item name="android:textColor">#2f2f2f</item>
    </style>

    <style name="home_section_subtitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_marginLeft">9.6dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#8e8e8e</item>
    </style>

    <style name="home_section_more">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">3.84dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="home_tag_style">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="store_tag_style">
        <item name="android:textColor">#2196f3</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">#bbbbbb</item>
    </style>

    <style name="divider_solid_9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">#f4f5f7</item>
    </style>

    <style name="divider_shadow_6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/shape_recyclerview_item_decoration</item>
    </style>
</resources>