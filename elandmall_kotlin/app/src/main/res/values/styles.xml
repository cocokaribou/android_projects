<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home_section_title_area">
        <item name="android:paddingStart">14.4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57.6dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="home_section_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20.16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2f2f2f</item>
    </style>

    <style name="home_section_subtitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_marginLeft">9.6dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#8e8e8e</item>
    </style>

    <style name="home_section_more">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">3.84dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="home_tag_style">
        <item name="android:background">@drawable/tag_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingTop">4.5dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingBottom">4.5dp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>