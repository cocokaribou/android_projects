<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="home_section_title_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57.6dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="home_section_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20.16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">14.4dp</item>
        <item name="android:textColor">#2f2f2f</item>
    </style>

    <style name="home_section_subtitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxWidth">250dp</item>
        <item name="android:layout_marginLeft">9.6dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#8e8e8e</item>
    </style>

    <style name="home_section_more">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">3.84dp</item>
        <item name="android:textSize">13.44dp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="home_tag_style">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="store_tag_style">
        <item name="android:textColor">#2196f3</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!-- 반짝 배송 아이콘 -->
    <style name="banjjak_tag_style_on">
        <item name="android:textColor">#f5b51c</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="banjjak_tag_style_off">
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="banjjak_tag_style_default">
        <item name="android:textColor">#c9000b</item>
    </style>

    <style name="bottom_sheet_theme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/app_modal_style</item>
    </style>

    <style name="app_modal_style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_solid_radius_top_20dp</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">#bbbbbb</item>
    </style>

    <style name="divider_solid_9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">#f4f5f7</item>
    </style>

    <style name="divider_shadow_6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/shape_recyclerview_item_decoration</item>
    </style>

    <!-- common center title -->
    <style name="common_center_ekids">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="common_center_plan_detail">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_lnb_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">17dp</item>
        <item name="android:textColor">#2f2f2f</item>
    </style>

    <!-- search activity tab text -->
    <style name="search_tab_text">
        <item name="android:textSize">13.5sp</item>
    </style>
</resources>